{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es5",
      "es2015.collection",
      "es2015.promise",
      "ES2019",
      "ESNext"
    ],
    "types": [
      "chrome"
    ],
    "baseUrl": "src",
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}